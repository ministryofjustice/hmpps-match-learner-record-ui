{% from "govuk/components/button/macro.njk" import govukButton %}
{%- from "moj/components/alert/macro.njk" import mojAlert -%}

{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Match someone's learner record</h1>

        {{ mojAlert({
              variant: "information",
              dismissible: false,
              html: 'For help to use this service, email us at <a href="mailto:getreadyforwork@justice.gov.uk">getreadyforwork@justice.gov.uk</a>'
            }) }}

        <p class="govuk-body">Use this product to:</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>search for possible matches from the Learning Records Service (LRS)</li>
          <li>match someone to their unique learner number (ULN)</li>
          <li>identify if you need to create a ULN for someone</li>
        </ul>

        {{ govukButton({
          text: "Start now",
          href: "/find-a-prisoner-clear",
          id: "startNow",
          isStartButton: true
        }) }}
      </div>
    </div>
  </div>
{% endblock %}
