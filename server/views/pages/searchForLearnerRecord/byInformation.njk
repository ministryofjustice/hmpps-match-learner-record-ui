{% extends "../../partials/layout.njk" %}

{% set pageTitle = "Search for a learner record" %}
{% set backLink = "/find-a-prisoner" %}

{% block content %}
<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <h1 class="govuk-heading-l">Search for {{ prisonerSummary.firstName | safe }} {{ prisonerSummary.lastName | safe }}'s learner record</h1>
      <p class="govuk-body">Search for {{ prisonerSummary.firstName | safe }} {{ prisonerSummary.lastName | safe }}'s learner record using either their ULN or their personal information.</p>

      {{ mojSubNavigation({
        label: "Sub navigation",
        items: [{
          text: "Unique learner number",
          href: "/search-for-learner-record-by-uln/" + prisonerSummary.prisonerNumber,
          attributes: {
            id: "ulnTabLink"
          }
        }, {
          text: "Personal information",
          active: true,
          href: "#",
          attributes: {
            id: "informationTabLink"
          }
        }]
      }) }}

      <form class="form" method="post" novalidate="">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        {{ govukInput({
          label: {
            text: "Given name",
            classes: "govuk-!-font-weight-bold"
          },
          id: "givenName",
          name: "givenName",
          value: form.givenName,
          classes: "govuk-input--width-20",
          errorMessage: errors | findError("givenName")
        }) }}

        {{ govukInput({
          label: {
            text: "Family name",
            classes: "govuk-!-font-weight-bold"
          },
          id: "familyName",
          name: "familyName",
          value: form.familyName,
          classes: "govuk-input--width-20",
          errorMessage: errors | findError("familyName")
        }) }}

        {{ govukDateInput({
          id: "dob",
          namePrefix: "dob",
          fieldset: {
            legend: {
              text: "Date of birth",
              classes: "govuk-!-font-weight-bold"
            }
          },
          errorMessage: errors | findError("dob"),
          items: [
            {
              name: "day",
              classes: "govuk-input--width-2",
              autocomplete: "bday-day",
              value: form['dob-day']
            },
            {
              name: "month",
              classes: "govuk-input--width-2",
              autocomplete: "bday-month",
              value: form['dob-month']
            },
            {
              name: "year",
              classes: "govuk-input--width-4",
              autocomplete: "bday-year",
              value: form['dob-year']
            }
          ]
        }) }}

        {{ govukInput({
          label: {
            text: "Postcode (optional)",
            classes: "govuk-!-font-weight-bold"
          },
          id: "postcode",
          name: "postcode",
          value: form.postcode,
          classes: "govuk-input--width-10"
        }) }}

        {{ govukSelect({
          id: "sex",
          name: "sex",
          value: form.sex,
          label: {
            text: "Sex (optional)",
            classes: "govuk-!-font-weight-bold"
          },
          items: [
            {
              value: "",
              text: "Select their sex"
            },
            {
              value: "MALE",
              text: "Male"
            },
            {
              value: "FEMALE",
              text: "Female"
            },
            {
              value: "NOT_KNOWN",
              text: "Not known"
            }
          ]
        }) }}

        {{ govukButton({
          text: "Search",
          type: "submit",
          id: "searchButton"
        }) }}
      </form>
    </div>
  </div>
  </div>
{% endblock %}
